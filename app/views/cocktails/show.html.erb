<h1> <%= @cocktail.name %> </h1>


  <ul> <% @cocktail.doses.each do |dose| %>
      <li> <%= dose.description %> with <%= dose.ingredient.name %>
      <%= link_to cocktail_dose_path(@cocktail, dose),  method: :delete, data: { confirm: 'Are you sure?' } do  %><i class="far fa-trash-alt"></i><% end  %>
      </li>
      <% end  %>
  </ul>


  <div>
  <%= link_to "Add description", new_cocktail_dose_path(@cocktail) %>
  </div>

  <div>
  <%= link_to "Back", cocktails_path %>
  </div>

