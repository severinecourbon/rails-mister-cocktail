<div class="container">

  <h1>Cocktails list</h1>
    <div class="row">

      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card">
            <div class="card-description"><h2>
              <%= link_to cocktail.name, cocktail %></h2>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  <%= link_to "create your cocktail" , new_cocktail_path, {class: "btn-medium"} %>
</div>
